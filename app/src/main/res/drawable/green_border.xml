<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Lapisan Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Transparan -->
            <stroke
                android:width="2dp"
                android:color="@color/blue_600"/> <!-- Ketebalan border -->
            <corners android:radius="15dp" /> <!-- Sudut melengkung -->
        </shape>
    </item>

    <!-- Lapisan Isi (Background) -->
    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Warna isi (background) -->
            <corners android:radius="15dp" /> <!-- Sesuaikan dengan sudut CardView -->
        </shape>
    </item>
</layer-list>
